# EditorConfig is awesome: http://EditorConfig.org

# Only define some overrides.
# top-most EditorConfig file? No!
# root = true

# Unix-style newlines with a newline ending every file
[*.{cfg,md,rst,txt}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ReST-Files
[*.{cfg,rst,txt}]
indent_style = space
indent_size = 3

# MD-Files
[*.md]
indent_style = space
indent_size = 4
